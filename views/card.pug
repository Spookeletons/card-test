extends layout

block content
    div(class=`card ${cardClass}`)
        h3.title ACME Insurance Co
        div.info-row.name-row
            p.label Name:
            p #{firstName} #{lastName}
        div.info-container
            div.info-row
                p.label Insurance Type:
                p #{type}
            div.info-row
                //get month (number between 0 and 11)
                //get day (number between 1 and 31)
                //get year (4 digit number)
                p.label DOB:
                p #{dateOfBirth.getMonth()+1||11}/#{dateOfBirth.getDate()||23}/#{dateOfBirth.getFullYear()||2005}
        div.info-row
            div
                p.label Address:

            div.address-text
                p #{addressLine1}
                p #{addressLine2}
                p #{city}, #{state}, #{zip}
        div.info-container
            div.info-row
                p.label Acct #:
                p #{accountNumber}
            div.info-row
                p.label Exp.:

                p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()+4}
        div.info-container
            div.info-row
                p.label Start:
                p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()}
        div.info-container
            div.info-row
                a(href="/") Back
